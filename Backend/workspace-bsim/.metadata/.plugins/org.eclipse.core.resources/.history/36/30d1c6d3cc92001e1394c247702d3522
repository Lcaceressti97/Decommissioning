package hn.com.tigo.inquiriesamsysnavega.controllers;

import java.time.LocalDate;
import java.util.List;
import java.util.Optional;

import javax.annotation.PostConstruct;
import javax.validation.Valid;

import org.springframework.format.annotation.DateTimeFormat;
import org.springframework.http.ResponseEntity;
import org.springframework.security.core.context.SecurityContextHolder;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PatchMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import hn.com.tigo.inquiriesamsysnavega.models.AmnetPaymentsModel;
import hn.com.tigo.inquiriesamsysnavega.models.TableNameModel;
import hn.com.tigo.inquiriesamsysnavega.services.interfaces.AmnetPaymentsService;
import hn.com.tigo.inquiriesamsysnavega.utils.Util;

@RestController
@RequestMapping("/amnetpayments")
public class AmnetPaymentsController {

	private final AmnetPaymentsService paymentConsultationService;
	private final Util util;

	public AmnetPaymentsController(AmnetPaymentsService paymentConsultationService) {
		this.paymentConsultationService = paymentConsultationService;
		this.util = new Util();
	}

	@PostConstruct
	void setGlobalSecurityContext() {
		SecurityContextHolder.setStrategyName(SecurityContextHolder.MODE_INHERITABLETHREADLOCAL);
	}

	@GetMapping("/tablenames")
	public List<TableNameModel> getTableNames() {
		return paymentConsultationService.getTableNamesQueryAmnet();
	}

	@GetMapping("/tabledata")
	public ResponseEntity<Object> getTableData(@RequestParam(value = "tableName", required = false) String tableName) {

		List<AmnetPaymentsModel> models = this.paymentConsultationService.getTableDataQueryAmnet(tableName);
		return ResponseEntity.ok(this.util.setSuccessResponse(models));
	}

	@GetMapping()
	public ResponseEntity<Object> getByDateRange(
			@RequestParam(value = "startDate", required = false) @DateTimeFormat(iso = DateTimeFormat.ISO.DATE) Optional<LocalDate> startDate,
			@RequestParam(value = "endDate", required = false) @DateTimeFormat(iso = DateTimeFormat.ISO.DATE) Optional<LocalDate> endDate) {

		List<AmnetPaymentsModel> models = this.paymentConsultationService.getPaymentsAmnetByDateRange(startDate,
				endDate);
		return ResponseEntity.ok(this.util.setSuccessResponse(models));
	}

	@PostMapping("/add")
	public ResponseEntity<Object> add(@Valid @RequestBody AmnetPaymentsModel model) {
		this.paymentConsultationService.add(model);
		return ResponseEntity.ok(this.util.setSuccessWithoutData());
	}

	@PatchMapping("/updateStatus/{id}")
	public ResponseEntity<Object> updateSingleClient(@PathVariable Long id) {
		this.paymentConsultationService.updateStatusPaymentsAmnet(id);
		return ResponseEntity.ok(this.util.setSuccessWithoutData());
	}
}
